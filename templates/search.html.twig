{% extends "base.html.twig" %}

{% block title %}Advanced Search - {{ app_name }}{% endblock %}

{% block content %}
{% include "navbar.html.twig" with {'currentPage': 'search'} %}

<div class="container" style="padding-top: 20px;">
    <div class="content-header">
        <div>
            <h1><i class="fas fa-search"></i> Advanced Search</h1>
            <p class="text-muted">Search across messages, contacts, and conversations with filters</p>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card search-form-card">
        <div class="card-header">
            <h3>Search Filters</h3>
        </div>
        <div class="card-body">
            <div class="search-grid">
                <div class="form-group">
                    <label>Search Query</label>
                    <div class="search-input-group">
                        <input type="text" id="searchQuery" class="crm-input" placeholder="Search messages, contacts, phone numbers..." autofocus>
                        <button onclick="performSearch()" class="btn-primary" style="padding: 10px 24px;">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                    <small class="text-muted">Search across message body, contact names, and phone numbers</small>
                </div>

                <div class="filters-row">
                    <div class="form-group">
                        <label>Contact Stage</label>
                        <select id="filterStage" class="crm-select">
                            <option value="">All Stages</option>
                            <option value="new">New</option>
                            <option value="contacted">Contacted</option>
                            <option value="qualified">Qualified</option>
                            <option value="proposal">Proposal</option>
                            <option value="negotiation">Negotiation</option>
                            <option value="customer">Customer</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Tags</label>
                        <select id="filterTags" class="crm-select" multiple>
                            <option value="">All Tags</option>
                        </select>
                        <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                    </div>

                    <div class="form-group">
                        <label>Message Type</label>
                        <select id="filterMessageType" class="crm-select">
                            <option value="">All Types</option>
                            <option value="text">Text</option>
                            <option value="image">Image</option>
                            <option value="video">Video</option>
                            <option value="audio">Audio</option>
                            <option value="document">Document</option>
                        </select>
                    </div>
                </div>

                <div class="filters-row">
                    <div class="form-group">
                        <label>From Date</label>
                        <input type="date" id="filterFromDate" class="crm-input">
                    </div>

                    <div class="form-group">
                        <label>To Date</label>
                        <input type="date" id="filterToDate" class="crm-input">
                    </div>

                    <div class="form-group">
                        <label>Message Direction</label>
                        <select id="filterDirection" class="crm-select">
                            <option value="">Both Directions</option>
                            <option value="incoming">Incoming</option>
                            <option value="outgoing">Outgoing</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label>Minimum Lead Score</label>
                    <div class="slider-group">
                        <input type="range" id="filterMinScore" class="slider" min="0" max="100" value="0">
                        <span id="scoreDisplay">0</span>
                    </div>
                </div>

                <div style="display: flex; gap: 10px; margin-top: 20px;">
                    <button onclick="performSearch()" class="btn-primary" style="flex: 1;">
                        <i class="fas fa-search"></i> Search with Filters
                    </button>
                    <button onclick="resetFilters()" class="btn-secondary" style="flex: 1;">
                        <i class="fas fa-redo"></i> Reset Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Results -->
    <div id="resultsSection" style="display: none; margin-top: 30px;">
        <div class="card">
            <div class="card-header">
                <h3>
                    <span id="resultsTitle">Search Results</span>
                    <span class="text-muted" style="font-size: 14px;" id="resultCount"></span>
                </h3>
            </div>
            <div class="card-body">
                <div id="searchResults" class="loading">
                    Loading results...
                </div>
            </div>
        </div>
    </div>

    <!-- No Results -->
    <div id="noResults" class="empty-state" style="display: none; margin-top: 40px;">
        <i class="fas fa-search" style="font-size: 48px; color: var(--text-muted); margin-bottom: 20px;"></i>
        <p>No results found</p>
        <p style="font-size: 14px; color: var(--text-muted);">Try adjusting your search filters or query</p>
    </div>
</div>

<!-- Toast Notification -->
<div id="toast" class="toast"></div>

<!-- Search Result Detail Modal -->
<div id="messageDetailModal" class="modal" style="display: none;">
    <div class="modal-content" style="max-width: 600px;">
        <div class="modal-header">
            <h2>Message Details</h2>
            <button onclick="closeDetailModal()" class="modal-close">&times;</button>
        </div>
        <div class="modal-body" id="messageDetailContent">
            <!-- Content loaded by JavaScript -->
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script src="assets/js/search.js?v={{ "now"|date("U") }}"></script>
{% endblock %}
