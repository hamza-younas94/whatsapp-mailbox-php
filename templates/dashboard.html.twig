<!-- Template Message Modal -->
<div id="templateModal" class="modal" style="display: none;">
    <div class="modal-content" style="max-width: 500px;">
        <div class="modal-header">
            <h2>Send Template Message</h2>
            <button onclick="closeTemplateModal()" class="modal-close">&times;</button>
        </div>
        <div class="modal-body">
            <p style="color: #6b7280; margin-bottom: 20px; font-size: 14px;">
                Template messages allow you to start conversations with contacts who haven't messaged you in 24 hours.
            </p>
            <div class="form-group">
                <label>Template Name</label>
                <input type="text" id="templateName" class="crm-input" placeholder="e.g., hello_world" value="hello_world">
                <small style="color: #6b7280; font-size: 12px;">Use template name from your WhatsApp Business Manager</small>
            </div>
            <div class="form-group" style="margin-top: 15px;">
                <label>Language Code</label>
                <select id="templateLanguage" class="crm-select">
                    <option value="en">English (en)</option>
                    <option value="en_US">English US (en_US)</option>
                    <option value="en_GB">English UK (en_GB)</option>
                </select>
            </div>
            <div style="margin-top: 20px; display: flex; gap: 10px;">
                <button onclick="sendTemplate()" class="btn-primary" style="flex: 1;">Send Template</button>
                <button onclick="closeTemplateModal()" class="btn-secondary" style="flex: 1;">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- CRM Modal (kept for backward compatibility) -->
