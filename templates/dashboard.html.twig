{% extends "base.html.twig" %}

{% block title %}Mailbox - {{ app_name }}{% endblock %}

{% block content %}
{% include "navbar.html.twig" with {'currentPage': 'mailbox'} %}

<div class="mailbox-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="search-box">
            <input type="text" id="searchContacts" placeholder="Search contacts...">
        </div>
        
        <!-- Message Limit Badge -->
        <div id="messageLimitBadge" class="message-limit-badge">
            <span class="limit-text">Loading...</span>
        </div>
        
        <div class="contacts-list" id="contactsList">
            <div class="loading">Loading contacts...</div>
        </div>
    </div>
    
    <!-- Chat Area -->
    <div class="chat-area">
        <div class="chat-header" id="chatHeader">
            <div class="empty-state">Select a contact to start messaging</div>
        </div>
        
        <div class="messages-container" id="messagesContainer">
            <div class="empty-state">
                <svg width="100" height="100" viewBox="0 0 24 24" fill="#ccc">
                    <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
                </svg>
                <p>No conversation selected</p>
            </div>
        </div>
        
        <div class="message-input-container" id="messageInputContainer" style="display: none;">
            <form id="messageForm">
                <input type="file" id="mediaInput" style="display: none;" accept="image/*,video/*,audio/*,.pdf,.doc,.docx" onchange="handleFileSelect(event)">
                <button type="button" class="attach-btn" onclick="document.getElementById('mediaInput').click()" title="Attach media">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M16.5 6v11.5c0 2.21-1.79 4-4 4s-4-1.79-4-4V5c0-1.38 1.12-2.5 2.5-2.5s2.5 1.12 2.5 2.5v10.5c0 .55-.45 1-1 1s-1-.45-1-1V6H10v9.5c0 1.38 1.12 2.5 2.5 2.5s2.5-1.12 2.5-2.5V5c0-2.21-1.79-4-4-4S7 2.79 7 5v12.5c0 3.04 2.46 5.5 5.5 5.5s5.5-2.46 5.5-5.5V6h-1.5z"/>
                    </svg>
                </button>
                <input type="text" id="messageInput" placeholder="Type a message..." autocomplete="off">
                <button type="submit" class="send-btn">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
                    </svg>
                </button>
            </form>
            <div id="mediaPreview" class="media-preview" style="display: none;">
                <div class="media-preview-content">
                    <button type="button" class="media-preview-close" onclick="clearMediaSelection()">&times;</button>
                    <div id="mediaPreviewImage"></div>
                    <div class="media-preview-info">
                        <span id="mediaFileName"></span>
                        <span id="mediaFileSize"></span>
                    </div>
                    <input type="text" id="mediaCaption" placeholder="Add a caption (optional)" class="media-caption-input">
                </div>
            </div>
        </div>
    </div>
    
    <!-- CRM Side Panel -->
    <div class="crm-side-panel" id="crmSidePanel" style="display: none;">
        <div class="crm-panel-header">
            <h3>CRM Details</h3>
            <button onclick="closeCrmPanel()" class="close-panel-btn">&times;</button>
        </div>
        <div class="crm-panel-content" id="crmPanelContent">
            <!-- Content loaded by JavaScript -->
        </div>
    </div>
</div>
    </div>
</div>

<!-- Toast Notification -->
<div id="toast" class="toast"></div>

<!-- Template Message Modal -->
<div id="templateModal" class="modal" style="display: none;">
    <div class="modal-content" style="max-width: 500px;">
        <div class="modal-header">
            <h2>Send Template Message</h2>
            <button onclick="closeTemplateModal()" class="modal-close">&times;</button>
        </div>
        <div class="modal-body">
            <p style="color: #6b7280; margin-bottom: 20px; font-size: 14px;">
                Template messages allow you to start conversations with contacts who haven't messaged you in 24 hours.
            </p>
            <div class="form-group">
                <label>Template Name</label>
                <input type="text" id="templateName" class="crm-input" placeholder="e.g., hello_world" value="hello_world">
                <small style="color: #6b7280; font-size: 12px;">Use template name from your WhatsApp Business Manager</small>
            </div>
            <div class="form-group" style="margin-top: 15px;">
                <label>Language Code</label>
                <select id="templateLanguage" class="crm-select">
                    <option value="en">English (en)</option>
                    <option value="en_US">English US (en_US)</option>
                    <option value="en_GB">English UK (en_GB)</option>
                </select>
            </div>
            <div style="margin-top: 20px; display: flex; gap: 10px;">
                <button onclick="sendTemplate()" class="btn-primary" style="flex: 1;">Send Template</button>
                <button onclick="closeTemplateModal()" class="btn-secondary" style="flex: 1;">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- CRM Modal (kept for backward compatibility) -->
<div id="crmModal" class="modal" style="display: none;">
    <div class="modal-content" id="crmModalContent">
        <!-- Content loaded by JavaScript -->
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script src="assets/js/app.js?v={{ "now"|date("U") }}"></script>
{% endblock %}
