{% extends "base.html.twig" %}

{% block title %}DCMB IP Commands - {{ app_name }}{% endblock %}

{% block content %}
{% include "navbar.html.twig" with {'currentPage': 'ip-commands'} %}

<div class="container-fluid">
    <div class="page-header mb-4">
        <div>
            <h1><i class="fas fa-network-wired" style="color: #128C7E;"></i> DCMB IP Commands</h1>
            <p style="color: #6c757d; font-size: 0.95rem; margin-top: 0.5rem;">Track and manage IP addresses sent to analytics</p>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card stat-card">
                <div class="stat-icon" style="background: #e8f5e9;">
                    <i class="fas fa-list" style="color: #25D366; font-size: 1.3rem;"></i>
                </div>
                <div class="stat-value">{{ totalCommands }}</div>
                <div class="stat-label">Total Commands</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card">
                <div class="stat-icon" style="background: #e8f5e9;">
                    <i class="fas fa-check-circle" style="color: #4caf50; font-size: 1.3rem;"></i>
                </div>
                <div class="stat-value">{{ successCount }}</div>
                <div class="stat-label">Successful</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card">
                <div class="stat-icon" style="background: #ffebee;">
                    <i class="fas fa-times-circle" style="color: #f44336; font-size: 1.3rem;"></i>
                </div>
                <div class="stat-value">{{ failedCount }}</div>
                <div class="stat-label">Failed</div>
            </div>
        </div>
    </div>

    <!-- Manual IP Submission -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="mb-3"><svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" style="display: inline-block; margin-right: 6px; vertical-align: middle;"><circle cx="12" cy="12" r="10"/><path d="M12 7v10M7 12h10" stroke="white" stroke-width="2"/></svg> Add IP Manually</h5>
            <form id="ipForm" class="row g-3">
                <div class="col-md-9">
                    <input type="text" class="form-control" id="ipAddress" placeholder="Enter IPv4 or IPv6 address (e.g., 192.168.1.1 or 2407:aa80:15:2f25:a87f:205c:cc45:3984)" required>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-paper-plane"></i> Submit IP
                    </button>
                </div>
            </form>
            <div id="apiResponse" class="mt-3" style="display: none;">
                <h6>API Response:</h6>
                <pre class="bg-light p-3 rounded" style="max-height: 200px; overflow-y: auto;"><code id="responseText"></code></pre>
            </div>
        </div>
    </div>

    <!-- IP Commands History -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-history"></i> Command History (Last 100)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date & Time</th>
                            <th>IP Address</th>
                            <th>Contact</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>HTTP Code</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if ipCommands is iterable and ipCommands|length > 0 %}
                            {% for cmd in ipCommands %}
                            <tr>
                                <td>{{ cmd.created_at|date('M d, Y H:i:s') }}</td>
                                <td><code>{{ cmd.ip_address }}</code></td>
                                <td>{{ cmd.contact_name ?? '-' }}</td>
                                <td>{{ cmd.phone_number ?? '-' }}</td>
                                <td>
                                    {% if cmd.status == 'success' %}
                                        <span class="badge bg-success">Success</span>
                                    {% else %}
                                        <span class="badge bg-danger">Failed</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if cmd.http_code %}
                                        <span class="badge {% if cmd.http_code >= 200 and cmd.http_code < 300 %}bg-success{% else %}bg-danger{% endif %}">
                                            {{ cmd.http_code }}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" onclick="viewResponse({{ cmd.id }}, '{{ cmd.api_response|e('js') }}')">
                                        <i class="fas fa-eye"></i> View Response
                                    </button>
                                </td>
                            </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                                    <p class="mt-2">No IP commands yet. Send "dcmb ip <address>" via WhatsApp or use the form above.</p>
                                </td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Response Modal -->
<div class="modal fade" id="responseModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">API Response</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <pre class="bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;"><code id="modalResponseText"></code></pre>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div id="toast" class="toast"></div>
{% endblock %}

{% block extra_js %}
<script>
let responseModal;

document.addEventListener('DOMContentLoaded', function() {
    const modalElement = document.getElementById('responseModal');
    if (modalElement) {
        responseModal = new bootstrap.Modal(modalElement);
    }
    
    // Handle manual IP form submission
    document.getElementById('ipForm').addEventListener('submit', function(e) {
        e.preventDefault();
        submitIP();
    });
});

async function submitIP() {
    const ipAddress = document.getElementById('ipAddress').value.trim();
    
    if (!ipAddress) {
        showToast('Please enter an IP address', 'error');
        return;
    }
    
    // Show loading
    const submitBtn = document.querySelector('#ipForm button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
    submitBtn.disabled = true;
    
    try {
        const formData = new FormData();
        formData.append('ip_address', ipAddress);
        
        const response = await fetch('ip-commands.php', {
            method: 'POST',
            headers: {'X-Requested-With': 'XMLHttpRequest'},
            body: formData
        });
        
        const result = await response.json();
        
        if (result.success) {
            showToast('IP submitted successfully!', 'success');
            document.getElementById('ipAddress').value = '';
            
            // Show API response
            document.getElementById('apiResponse').style.display = 'block';
            document.getElementById('responseText').textContent = result.response;
            
            // Reload page after 2 seconds
            setTimeout(() => location.reload(), 2000);
        } else {
            showToast('Error: ' + result.error, 'error');
        }
    } catch (error) {
        console.error('Error:', error);
        showToast('Failed to submit IP', 'error');
    } finally {
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
    }
}

function viewResponse(id, response) {
    if (!responseModal) {
        console.error('Modal not initialized');
        return;
    }
    document.getElementById('modalResponseText').textContent = response;
    responseModal.show();
}

function showToast(message, type = 'info') {
    const toast = document.getElementById('toast');
    toast.textContent = message;
    toast.className = `toast toast-${type} show`;
    
    setTimeout(() => {
        toast.classList.remove('show');
    }, 3000);
}
</script>
{% endblock %}
