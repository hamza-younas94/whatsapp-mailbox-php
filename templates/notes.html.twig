            </svg>
            Notes
        </a>
    </div>
</div>

<div class="notes-page">
    <div class="notes-header">
        <h1>All Notes</h1>
        <div class="notes-stats">
            <div class="stat-badge">
                <span class="stat-value">{{ totalNotes }}</span>
                <span class="stat-label">Total Notes</span>
            </div>
            <div class="stat-badge">
                <span class="stat-value">{{ notesByType.general ?? 0 }}</span>
                <span class="stat-label">General</span>
            </div>
            <div class="stat-badge">
                <span class="stat-value">{{ notesByType.call ?? 0 }}</span>
                <span class="stat-label">Calls</span>
            </div>
            <div class="stat-badge">
                <span class="stat-value">{{ notesByType.meeting ?? 0 }}</span>
                <span class="stat-label">Meetings</span>
            </div>
        </div>
    </div>

    <div class="notes-filters">
        <form method="GET" class="filter-form">
            <div class="filter-group">
                <label>Search</label>
                <input type="text" name="search" placeholder="Search notes..." value="{{ searchQuery }}">
            </div>
            
            <div class="filter-group">
                <label>Contact</label>
                <select name="contact_id">
                    <option value="">All Contacts</option>
                    {% for contact in contacts %}
                        <option value="{{ contact.id }}" {% if currentContactId == contact.id %}selected{% endif %}>
                            {{ contact.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="filter-group">
                <label>Type</label>
                <select name="type">
                    <option value="all" {% if currentType == 'all' %}selected{% endif %}>All Types</option>
                    <option value="general" {% if currentType == 'general' %}selected{% endif %}>General</option>
                    <option value="call" {% if currentType == 'call' %}selected{% endif %}>Call</option>
                    <option value="meeting" {% if currentType == 'meeting' %}selected{% endif %}>Meeting</option>
                    <option value="email" {% if currentType == 'email' %}selected{% endif %}>Email</option>
                </select>
            </div>
            
            <button type="submit" class="btn-filter">Filter</button>
            <a href="notes.php" class="btn-reset">Reset</a>
        </form>
    </div>

    <div class="notes-list-container">
        {% if notes.items|length > 0 %}
            {% for note in notes.items %}
                <div class="note-card note-type-{{ note.type }}">
                    <div class="note-card-header">
                        <div class="note-meta">
                            <span class="note-type-badge">{{ note.type|upper }}</span>
                            <a href="index.php?contact={{ note.contact_id }}" class="note-contact">
                                {{ note.contact.name }}
                            </a>
                        </div>
                        <span class="note-date" data-timestamp="{{ note.created_at }}">{{ note.created_at }}</span>
                    </div>
                    <div class="note-card-body">
                        <p>{{ note.content }}</p>
                    </div>
                    <div class="note-card-footer">
                        <span class="note-author">
                            by {{ note.creator.username ?? 'Admin' }}
                        </span>
                        <div class="note-actions">
                            <button onclick="viewContact({{ note.contact_id }})" class="btn-action">
                                View Contact
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="empty-state">
                <svg width="100" height="100" viewBox="0 0 24 24" fill="#ccc">
                    <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                </svg>
                <h3>No notes found</h3>
                <p>Start adding notes to your contacts in the mailbox</p>
            </div>
        {% endif %}
    </div>
</div>

<!-- Toast Notification -->
<div id="toast" class="toast"></div>
{% endblock %}

{% block extra_js %}
<script>
function viewContact(contactId) {
    window.location.href = 'index.php?contact=' + contactId;
}

// Format dates to Pakistan time
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('[data-timestamp]').forEach(function(el) {
        const timestamp = el.getAttribute('data-timestamp');
        const date = new Date(timestamp);
        const options = {
            timeZone: 'Asia/Karachi',
            weekday: 'short',
            year: 'numeric',
            month: 'short',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            timeZoneName: 'short'
        };
        el.textContent = date.toLocaleString('en-US', options);
    });
});
</script>
{% endblock %}
