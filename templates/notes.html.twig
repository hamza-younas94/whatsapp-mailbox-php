{% extends "base.html.twig" %}

{% block title %}All Notes - {{ app_name }}{% endblock %}

{% block content %}
{% include "navbar.html.twig" with {'currentPage': 'notes'} %}

<div class="container-fluid notes-page">
    <div class="page-header">
        <div>
            <h1><i class="fas fa-sticky-note"></i> Activity Notes</h1>
            <p>Track conversations, calls, meetings and important information</p>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon" style="background: #e8f5e9;">
                    <i class="fas fa-clipboard-list" style="color: #25D366; font-size: 1.3rem;"></i>
                </div>
                <div class="stat-value">{{ totalNotes }}</div>
                <div class="stat-label">Total Notes</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon" style="background: #e3f2fd;">
                    <i class="fas fa-sticky-note" style="color: #2196f3; font-size: 1.3rem;"></i>
                </div>
                <div class="stat-value">{{ notesByType.general ?? 0 }}</div>
                <div class="stat-label">General</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon" style="background: #fff3e0;">
                    <i class="fas fa-phone-alt" style="color: #f57c00; font-size: 1.3rem;"></i>
                </div>
                <div class="stat-value">{{ notesByType.call ?? 0 }}</div>
                <div class="stat-label">Calls</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="stat-icon" style="background: #f3e5f5;">
                    <i class="fas fa-users" style="color: #7b1fa2; font-size: 1.3rem;"></i>
                </div>
                <div class="stat-value">{{ notesByType.meeting ?? 0 }}</div>
                <div class="stat-label">Meetings</div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Search</label>
                        <input type="text" name="search" class="crm-input" placeholder="Search notes or contacts..." value="{{ searchQuery }}">
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Contact</label>
                        <select name="contact_id" class="crm-select">
                            <option value="">All Contacts</option>
                            {% for contact in contacts %}
                                <option value="{{ contact.id }}" {% if currentContactId == contact.id %}selected{% endif %}>
                                    {{ contact.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Note Type</label>
                        <select name="type" class="crm-select">
                            <option value="all" {% if currentType == 'all' %}selected{% endif %}>All Types</option>
                            <option value="general" {% if currentType == 'general' %}selected{% endif %}>üìù General</option>
                            <option value="call" {% if currentType == 'call' %}selected{% endif %}>üìû Call</option>
                            <option value="meeting" {% if currentType == 'meeting' %}selected{% endif %}>ü§ù Meeting</option>
                            <option value="email" {% if currentType == 'email' %}selected{% endif %}>üìß Email</option>
                        </select>
                    </div>
                </div>
                
                <div class="col-md-2" style="display: flex; align-items: flex-end; gap: 12px;">
                    <button type="submit" class="btn btn-primary" style="flex: 1;">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                    <a href="notes.php" class="btn btn-secondary">
                        <i class="fas fa-redo"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="notes-list-container">
        {% if notes is iterable and notes|length > 0 %}
            <div class="notes-grid">
            {% for note in notes %}
                <div class="note-card note-type-{{ note.type }}">
                    <div class="note-card-header">
                        <span class="note-type-badge note-badge-{{ note.type }}">
                            {% if note.type == 'call' %}<i class="fas fa-phone-alt"></i> Call{% endif %}
                            {% if note.type == 'meeting' %}<i class="fas fa-users"></i> Meeting{% endif %}
                            {% if note.type == 'email' %}<i class="fas fa-envelope"></i> Email{% endif %}
                            {% if note.type == 'general' %}<i class="fas fa-sticky-note"></i> General{% endif %}
                        </span>
                        <span class="note-date">
                            <i class="far fa-clock"></i> {{ note.created_at|date('M d, Y') }}
                        </span>
                    </div>
                    
                    <div class="note-card-body">
                        <div class="note-contact-info">
                            <i class="fas fa-user" style="color: #128C7E;"></i>
                            <a href="index.php?contact={{ note.contact_id }}" class="note-contact-name">
                                {{ note.contact.name ?? 'Unknown Contact' }}
                            </a>
                        </div>
                        <p class="note-content">{{ note.content|nl2br }}</p>
                    </div>
                    
                    <div class="note-card-footer">
                        <span class="note-author">
                            <i class="fas fa-user-edit" style="color: #6c757d;"></i> {{ note.creator.username ?? 'Admin' }}
                        </span>
                        <a href="index.php?contact={{ note.contact_id }}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-comments"></i> Open Chat
                        </a>
                    </div>
                </div>
            {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <div style="text-align: center; padding: 3rem;">
                    <i class="fas fa-sticky-note" style="font-size: 4rem; color: #ddd; margin-bottom: 1rem;"></i>
                    <h3 style="color: #6c757d; font-size: 1.25rem; margin-bottom: 0.5rem;">No notes found</h3>
                    <p style="color: #999; font-size: 0.95rem;">Start adding notes to track your customer interactions</p>
                </div>
            </div>
        {% endif %}
    </div>
</div>

<!-- Toast Notification -->
<div id="toast" class="toast"></div>
{% endblock %}

{% block extra_js %}
<script>
function viewContact(contactId) {
    window.location.href = 'index.php?contact=' + contactId;
}

// Format dates to Pakistan time
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('[data-timestamp]').forEach(function(el) {
        const timestamp = el.getAttribute('data-timestamp');
        const date = new Date(timestamp);
        const options = {
            timeZone: 'Asia/Karachi',
            weekday: 'short',
            year: 'numeric',
            month: 'short',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            timeZoneName: 'short'
        };
        el.textContent = date.toLocaleString('en-US', options);
    });
});
</script>
{% endblock %}
