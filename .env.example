# Application
APP_NAME="MessageHub"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=messagehub
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Business Messaging API (Meta/Facebook Business Platform)
API_ACCESS_TOKEN=your_access_token_here
API_PHONE_NUMBER_ID=your_phone_number_id_here
API_VERSION=v18.0
WEBHOOK_VERIFY_TOKEN=your_custom_verify_token_here

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=true

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=error

# Timezone (Use Pakistan Standard Time)
TIMEZONE=Asia/Karachi

